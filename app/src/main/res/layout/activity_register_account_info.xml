<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context="com.example.kaihuynh.part_timejob.RegisterAccountInfoActivity">

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardElevation="@dimen/distance_view_10"
            app:cardCornerRadius="@dimen/distance_view_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_padding"
                android:weightSum="8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/iciel_cadena"
                    android:gravity="center"
                    android:text="@string/account_info_title"
                    android:textColor="@color/end_color"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:layout_weight="7"
                    android:gravity="top"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_fullName_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/distance_view_20"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_fullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/user"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:hint="@string/hint_full_name"
                            android:textColor="@color/grey_600"
                            android:textSize="18sp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:hint="@string/hint_email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/grey_600"
                            android:textSize="18sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="@dimen/distance_view_20"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/password"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:hint="@string/hint_password"
                            android:inputType="textPassword"
                            android:textColor="@color/grey_600"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/confirm_password"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:hint="@string/hint_confirm_password"
                            android:inputType="textPassword"
                            android:textColor="@color/grey_600"
                            android:textSize="18sp" />

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/btn_register_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/distance_view_40"
                        android:fontFamily="@font/iciel_cadena"
                        android:paddingLeft="@dimen/distance_view_40"
                        android:paddingRight="@dimen/distance_view_40"
                        android:text="@string/register"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:theme="@style/LocationButton"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
