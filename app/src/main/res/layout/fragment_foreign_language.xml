<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kaihuynh.part_timejob.fragments.ForeignLanguageFragment">

    <android.support.v4.widget.NestedScrollView
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/iciel_cadena"
                android:gravity="center"
                android:text="@string/foreign_language_title"
                android:textColor="@color/end_color"
                android:textSize="22sp" />

            <com.example.kaihuynh.part_timejob.others.NonScrollListView
                android:id="@+id/lv_foreign_language"
                android:layout_below="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/distance_view_5"
                android:layout_marginTop="@dimen/distance_view_40"
                android:background="@drawable/white_background">

            </com.example.kaihuynh.part_timejob.others.NonScrollListView>

            <RelativeLayout
                android:layout_below="@+id/lv_foreign_language"
                android:layout_marginTop="@dimen/distance_view_20"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <Button
                    android:id="@+id/btn_previous_foreignLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iciel_cadena"
                    android:text="@string/previous"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:theme="@style/LocationButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_alignParentStart="true"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/btn_next_foreignLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iciel_cadena"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:theme="@style/LocationButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RelativeOverlap,RtlHardcoded" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
