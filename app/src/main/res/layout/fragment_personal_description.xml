<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kaihuynh.part_timejob.fragments.PersonalDescriptionFragment"
    android:focusable="true">

    <android.support.v4.widget.NestedScrollView
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_view_20"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/iciel_cadena"
                android:text="@string/personal_description"
                android:textColor="@color/end_color"
                android:textSize="22sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_view_10"
                android:layout_marginRight="@dimen/distance_view_10"
                android:layout_marginTop="@dimen/distance_50"
                android:layout_below="@+id/tv3"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="@dimen/distance_view_10"
                app:cardElevation="@dimen/distance_view_5">

                <EditText
                    android:id="@+id/et_personal_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_view_20"
                    android:layout_marginRight="@dimen/distance_view_20"
                    android:layout_marginTop="@dimen/distance_view_15"
                    android:layout_marginBottom="@dimen/distance_view_15"
                    android:background="@drawable/input_template"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="top|left"
                    android:hint="@string/text4"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="@dimen/distance_view_5"
                    android:minHeight="150dp"
                    android:paddingLeft="@dimen/distance_view_10"
                    android:paddingRight="@dimen/distance_view_10"
                    android:paddingTop="@dimen/distance_view_5"
                    android:paddingBottom="@dimen/distance_view_5"
                    android:textColor="@color/back_87"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_below="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/distance_view_20"
                android:gravity="bottom">

                <Button
                    android:id="@+id/btn_previous_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iciel_cadena"
                    android:text="@string/previous"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:theme="@style/RegisterButton"
                    android:layout_alignParentStart="true"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/btn_done_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iciel_cadena"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:theme="@style/RegisterButton"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RelativeOverlap,RtlHardcoded" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
