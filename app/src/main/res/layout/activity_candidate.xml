<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaihuynh.part_timejob.CandidateActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/background_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/background_img_profile_size">

                <RelativeLayout
                    android:id="@+id/relative_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:background="@drawable/avatar_profile2"
                    android:padding="@dimen/distance_view_10">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:contentDescription="@string/avarar_img_description"
                        android:layout_width="@dimen/avatar_profile_size"
                        android:layout_height="@dimen/avatar_profile_size"
                        android:background="@drawable/avatar_profile"
                        android:padding="@dimen/distance_view_2"
                        android:src="@drawable/user_profile" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:background="#4bffffff"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:layout_below="@id/relative_layout1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name_candidate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/distance_view_5"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/text3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/back_87"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_email_candidate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name_candidate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/distance_view_5"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/text_mail"
                        android:textColor="@color/grey_54" />

                    <TextView
                        android:id="@+id/tv_date_candidate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_email_candidate"
                        android:layout_centerHorizontal="true"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/distance_view_5"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey_54" />
                </RelativeLayout>
            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/distance_view_10"
                android:layout_marginBottom="@dimen/distance_view_10"
                app:cardCornerRadius="@dimen/distance_view_5"
                app:cardElevation="@dimen/distance_view_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/distance_view_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_view_5"
                        android:fontFamily="@font/iciel_cadena"
                        android:paddingBottom="@dimen/distance_view_5"
                        android:text="@string/general"
                        android:textColor="@color/end_color"
                        android:textSize="20sp"
                        android:layout_marginStart="@dimen/distance_view_5" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tv_phone_number_candidate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/phone_number"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:editable="false"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:drawableStart="@drawable/phone_number"
                            tools:ignore="Deprecated" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_dob_profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_age_candidate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dob"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:editable="false"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:drawableStart="@drawable/dob"
                            tools:ignore="Deprecated" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_gender_candidate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/gender"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:editable="false"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:drawableStart="@drawable/gender"
                            tools:ignore="Deprecated" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_address_candidate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/address"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:editable="false"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:drawableStart="@drawable/address"
                            tools:ignore="Deprecated" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_education_candidate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/education"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:editable="false"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:drawableStart="@drawable/education"
                            tools:ignore="Deprecated" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginBottom="@dimen/distance_view_10"
                app:cardCornerRadius="@dimen/distance_view_5"
                app:cardElevation="@dimen/distance_view_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/distance_view_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_view_5"
                        android:fontFamily="@font/iciel_cadena"
                        android:text="@string/foreign_language_title"
                        android:textColor="@color/end_color"
                        android:textSize="20sp"
                        android:layout_marginStart="@dimen/distance_view_5" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_view_10"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText"
                        android:layout_marginStart="@dimen/distance_view_10">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_language_candidate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:editable="false"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:lineSpacingExtra="@dimen/distance_view_10"
                            android:textColor="@color/grey_54"
                            android:textSize="18sp"
                            tools:ignore="Deprecated" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginBottom="@dimen/distance_view_10"
                app:cardCornerRadius="@dimen/distance_view_5"
                app:cardElevation="@dimen/distance_view_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/distance_view_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_view_5"
                        android:fontFamily="@font/iciel_cadena"
                        android:paddingBottom="@dimen/distance_view_5"
                        android:textColor="@color/end_color"
                        android:text="@string/personal_skills"
                        android:textSize="20sp"
                        android:layout_marginStart="@dimen/distance_view_5" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginLeft="@dimen/distance_view_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/green"
                        app:hintTextAppearance="@style/TextInputLayoutHintText"
                        android:layout_marginStart="@dimen/distance_view_10">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_skill_candidate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/distance_view_10"
                            android:drawablePadding="@dimen/distance_view_10"
                            android:editable="false"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:textColor="@color/grey_54"
                            android:textSize="18sp"
                            tools:ignore="Deprecated" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginBottom="@dimen/distance_view_10"
                app:cardCornerRadius="@dimen/distance_view_5"
                app:cardElevation="@dimen/distance_view_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/distance_view_5">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/distance_view_5"
                            android:fontFamily="@font/iciel_cadena"
                            android:paddingBottom="@dimen/distance_view_5"
                            android:text="@string/personal_description"
                            android:textColor="@color/end_color"
                            android:textSize="20sp"
                            android:layout_marginStart="@dimen/distance_view_5" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_description_candidate"
                        android:layout_marginTop="@dimen/distance_view_10"
                        android:textSize="16sp"
                        android:background="@drawable/input_template"
                        android:inputType="textMultiLine"
                        android:gravity="top|left"
                        android:layout_marginRight="@dimen/distance_view_10"
                        android:lineSpacingExtra="@dimen/distance_view_5"
                        android:minHeight="@dimen/distance_view_90"
                        android:paddingLeft="@dimen/distance_view_10"
                        android:paddingRight="@dimen/distance_view_10"
                        android:paddingTop="@dimen/distance_view_5"
                        android:paddingBottom="@dimen/distance_view_5"
                        android:layout_marginBottom="@dimen/distance_view_10"
                        android:layout_marginLeft="@dimen/distance_view_15"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/back_87"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/distance_view_10"
                        android:layout_marginStart="@dimen/distance_view_15"
                        tools:ignore="RtlHardcoded,TextViewEdits" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="@dimen/distance_view_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/distance_view_5">

                    <Button
                        android:id="@+id/btn_ignore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:padding="@dimen/distance_view_5"
                        android:text="@string/refuse_candidate"
                        android:theme="@style/RefuseButton"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <Button
                        android:id="@+id/btn_accept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/distance_view_5"
                        android:textStyle="bold"
                        android:text="@string/choose_candidate"
                        android:theme="@style/LocationButton"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_candidate"
            app:layout_scrollFlags="scroll|enterAlways"
            android:theme="@style/ToolBarTheme"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
