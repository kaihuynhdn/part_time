<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/activity_padding"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/distance_view_5"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@drawable/user"
            android:layout_marginRight="@dimen/distance_view_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_description"
            android:layout_marginEnd="@dimen/distance_view_20" />

        <TextView
            android:id="@+id/tv_recruiter_name"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#ff8f00"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/grey_400"
        android:layout_marginTop="@dimen/distance_view_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_view_1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_view_15"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@drawable/email"
            android:layout_marginRight="@dimen/distance_view_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_description"
            android:layout_marginEnd="@dimen/distance_view_20" />

        <TextView
            android:id="@+id/tv_recruiter_email"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/back_87"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/grey_400"
        android:layout_marginTop="@dimen/distance_view_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_view_1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_view_15"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@drawable/phone_number"
            android:layout_marginRight="@dimen/distance_view_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_description"
            android:layout_marginEnd="@dimen/distance_view_20" />

        <TextView
            android:id="@+id/tv_recruiter_phone"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/back_87"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/grey_400"
        android:layout_marginTop="@dimen/distance_view_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_view_1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_view_15"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@drawable/address"
            android:layout_marginRight="@dimen/distance_view_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_description"
            android:layout_marginEnd="@dimen/distance_view_20" />

        <TextView
            android:id="@+id/tv_recruiter_address"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/back_87"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/grey_400"
        android:layout_marginTop="@dimen/distance_view_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_view_1"/>
</LinearLayout>
