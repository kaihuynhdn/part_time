<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kaihuynh.part_timejob.HomePageActivity"
    tools:showIn="@layout/app_bar_home_page">

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_view_5"
        android:background="@drawable/drop_shadow" />

    <com.example.kaihuynh.part_timejob.others.CustomViewPager
        android:id="@+id/view_pager_home"
        android:layout_above="@id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_above="@id/bottom_nav"
        android:layout_height="@dimen/distance_view_5"
        android:background="@drawable/drop_shadow_up" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        app:elevation="@dimen/distance_view_20"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        app:itemTextColor="@drawable/bottom_nav_color_state"
        app:itemIconTint="@drawable/bottom_nav_color_state"
        app:menu="@menu/bottom_nav_menu">

    </android.support.design.widget.BottomNavigationView>


</RelativeLayout>
