<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.kaihuynh.part_timejob.fragments.PersonalInfoFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/iciel_cadena"
                android:gravity="center"
                android:text="@string/personal_info_title"
                android:textColor="@color/end_color"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/distance_view_20"
                android:layout_weight="6"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_dob_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:textColorHint="@color/green"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/dob"
                        android:drawablePadding="@dimen/distance_view_10"
                        android:editable="false"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="@string/hint_dob"
                        android:textColor="@color/grey_600"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/dob"
                        tools:ignore="Deprecated" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_gender_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:textColorHint="@color/green"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/gender"
                        android:drawablePadding="@dimen/distance_view_10"
                        android:editable="false"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="@string/hint_gender"
                        android:textColor="@color/grey_600"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/gender"
                        tools:ignore="Deprecated" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:textColorHint="@color/green"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/address"
                        android:drawablePadding="@dimen/distance_view_10"
                        android:editable="false"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="@string/hint_address"
                        android:textColor="@color/grey_600"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/address"
                        tools:ignore="Deprecated" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_phone_number_layout"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/green"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:drawableLeft="@drawable/phone_number"
                        android:drawablePadding="@dimen/distance_view_10"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="@string/hint_phone_number"
                        android:inputType="number"
                        android:textColor="@color/grey_600"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/phone_number" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_education_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_view_20"
                    android:textColorHint="@color/green"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/education"
                        android:drawablePadding="@dimen/distance_view_10"
                        android:editable="false"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="@string/hint_education"
                        android:textColor="@color/grey_600"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/education"
                        tools:ignore="Deprecated" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/distance_view_10"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_next_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/iciel_cadena"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:theme="@style/RegisterButton"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
